default:
  suites:
    default:
      contexts:
        - PhpRayTracer\Tests\Behat\DemoContext

  extensions:
    FriendsOfBehat\SymfonyExtension:
      bootstrap: tests/bootstrap.php
      kernel:
          class: PhpRayTracer\Kernel
          path: '%paths.base%/src/Kernel.php'
          environment: test
          debug: true